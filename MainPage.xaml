<Page x:Class="jm150635d.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:jm150635d"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="MainPage" Width="800" Height="600">

    <StackPanel Background="#FF646464" Width="800" Height="600">
        <TextBlock x:Name="textBlock" Margin="10,120,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="Red" Height="32" Width="280" HorizontalAlignment="Center" TextAlignment="Center"/>
        <Button x:Name="buttonPVSP" Content="P VS P" Margin="10,20,0,0" VerticalAlignment="Top" Width="280" Height="32" HorizontalAlignment="Center" Click="buttonPVSP_Click"/>
        <Button x:Name="buttonPVSComp" Content="P VS Comp" Margin="10,20,0,0" VerticalAlignment="Top" Width="280" Height="32" HorizontalAlignment="Center" Click="buttonPVSComp_Click"/>
        <Button x:Name="buttonCompVSComp" Content="Comp VS Comp" Margin="10,20,0,0" VerticalAlignment="Top" Width="280" Height="32" HorizontalAlignment="Center" Click="buttonCompVSComp_Click"/>
        <Button x:Name="buttonExit" Content="Exit" Margin="10,20,0,0" VerticalAlignment="Top" Width="280" Height="32" HorizontalAlignment="Center" Click="buttonExit_Click"/>

    </StackPanel>
</Page>
